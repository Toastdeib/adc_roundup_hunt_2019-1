mixin blog_card(title, subtitle, imagePath, dateString, timeString, author, teaserText, isNew)
  .blog_card.card
    img.card-img-top(src= imagePath)
    if isNew
      .ribbon
        span New
    .card-body
      p.card-title #{title}
      p.card-subtitle #{subtitle}
      p.card-metadata 
        | Posted on #{dateString} at #{timeString} by 
        a(href="#") @#{author}
      p.card-text
        | #{teaserText}
        a(href="#")  (Read More)
