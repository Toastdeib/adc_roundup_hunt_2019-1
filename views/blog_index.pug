extends layout

include mixins/blog/blog_header.pug
include mixins/navbar_sticky.pug
include mixins/blog/blog_card.pug
include mixins/blog/blog_footer.pug

block content
  +blog_header
  +navbar_sticky("home")
  .container
    each blog in blog_posts
      .row.align-items-center 
        .col-md-9.col-center
          +blog_card(
            blog.entryUrl,
            blog.title,
            blog.subtitle,
            blog.imagePath, 
            blog.date, 
            blog.time, 
            blog.author, 
            blog.teaserText,
            blog.isNew
            )

  +blog_footer
