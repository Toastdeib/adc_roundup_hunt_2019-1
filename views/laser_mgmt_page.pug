extends layout

include mixins/laser/laser_header.pug
include mixins/navbar_sticky.pug
include mixins/laser/laser_footer.pug

block content
  +laser_header
  +navbar_sticky("laser")
  .container
    each solution_correct, index in correct_solutions
      .row.align-items-center.my-1.align-center
        .col-md-1
          if solution_correct
            i.far.fa-check-circle.checkmark-glyph.success
          else
            i.far.fa-circle.checkmark-glyph.neutral
        .col-md-9
          form.form-inline.form_submitPassword
            if solution_correct
              .form-group
                input(type="text", name="password", data-solution-id= index, disabled=true, placeholder="Unlocked!" readonly).form-control

                button(type="submit", readonly, disabled=true).btn.btn-primary Submit
            else
              .form-group
                input(type="text", name="password", data-solution-id= index, placeholder="Enter Password...").form-control

                button(type="submit").btn.btn-primary Submit
  +laser_footer
