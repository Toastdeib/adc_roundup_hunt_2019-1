extends layout

include mixins/blog/blog_header.pug
include mixins/navbar_sticky.pug
include mixins/blog/blog_card.pug
include mixins/blog/blog_footer.pug

block content
  +blog_header
  +navbar_sticky("home")
  .container
    .row.align-items-center 
      .col-md-12.col-center
        +blog_entry_full(
                blog.entryUrl,
                blog.title,
                blog.subtitle,
                blog.imagePath, 
                blog.date, 
                blog.time, 
                blog.author, 
                blog.text,
                blog.isNew
                )

  +blog_footer
