extends layout

include mixins/blog/blog_header.pug
include mixins/navbar_sticky.pug
include mixins/blog/blog_card.pug
include mixins/blog/blog_footer.pug

block content
  .container
    .row.align-items-center
      .col-md-6.col-center.text-center.align-middle
        .blog_header.align-middle
          h1 Blog Editor
    
    form#form_blogEditor
      .row.align-items-center
        .col-md-2.offset-md-2
          a(href="/admin").backButton
            i.fas.fa-chevron-left.fa-2x
            |  Back
      .row.align-items-center
        .col-md-3.offset-md-7
          .form-group
            label(for="blogEditor_selectBlog") Select Post
            select(name="blogSelector").form-control#blogEditor_selectBlog
              option(value="") Select Blog Post...
              for blogPost in blogList
                option(value= blogPost.blogId) #{blogPost.title}
              option(value="new") Create New Post
              
      .row
        .col-md-8.offset-md-2
          .form-group
            label(for="#blogTitle") Title
            input(type=text).form-control#blogTitle
      .row
        .col-md-8.offset-md-2
          .form-group
            label(for="#blogSubtitle") Subtitle
            input(type=text).form-control#blogSubtitle
      .row
        .col-md-2.offset-md-2
          .form-group
            label(for="#blogAuthor") Author
            input(type=text).form-control#blogAuthor
        .col-md-3
          .form-group
            label(for="#blogDate") Date
            input(type=text).form-control#blogDate
        .col-md-3
          .form-group
            label(for="#blogTime") Time
            input(type=text).form-control#blogTime
      .row
        .col-md-2.offset-md-2
          .form-group
            label(for="#blogImagePath") Image Path
            input(type=text name="imagePath").form-control#blogImagePath
        .col-md-3
          .form-group
            label(for="#blogReleaseDate") Release Date
            input(type="date" name="releaseDate").form-control#blogReleaseDate
        .col-md-3
          .form-group
            label(for="#blogReleaseTime") Release Time
            input(type="time" name="releaseDate").form-control#blogReleaseTime
      .row
        .col-md-8.offset-md-2
          .form-group
            label(for="#blogText") Blog Text
            textarea(rows=6).form-control#blogText
      .row.mt-2
        .col-md-1.offset-md-2
          button(type="submit")#editor_btnDelete.btn.btn-danger.mx-2 Delete
        .col-md-1.offset-md-6
          button(type="submit")#editor_btnSave.btn.btn-primary.mx-2 Save


    //- TODO: Render two views down below of teaser and full entry
                
  +blog_footer

  script(src='/js/dev_admin.js')