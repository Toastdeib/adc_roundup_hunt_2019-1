extends layout_colorful

block content
    .game_info_container
        .angled-jumbotron
            h1 
                img(src="img/ADCLogo.svg", alt="Alarm.com").inline-logo
                |  RoundUP Hunt 2019
            h3 Thank you for playing!
        //- .parallax-container(data-parallax="scroll", data-image-src="./img/puppy1.jpg", data-bleed="20")
        .parallax-window(data-parallax="scroll", data-image-src="/img/space7.jpg", data-position="top", data-bleed="10")
        .slide_section#section-rules.container-dark
            #titlebar-rules
                if prizeLevel != "none"
                    h1 You're a winner!
                else
                    h1 Thanks for Playing!
            .container
                if prizeLevel == "none"
                    .row.align-items-center.mt-3
                        .col-sm-4.offset-sm-4
                            img#prizeImage.disabled(src="/img/prize3.png").my-4 
                    .row.align-items-center.mt-3
                        .col-sm-8.offset-sm-2
                            h3.text-light The game has ended
                    .row.align-items-center.mt-3
                        .col-sm-8.offset-sm-2
                            p.text-light.text-center Unfortunately you didn't qualify for a prize, but we hope you had fun.  Contact the Gamemasters with any questions, comments or concerns.
                        .col-sm-8.offset-sm-2
                else if prizeLevel == "starsticker"
                    .row.align-items-center.mt-3
                        .col-sm-4.offset-sm-4
                            img#prizeImage(src="/img/prize1.png").my-4    
                    .row.align-items-center.mt-3
                        .col-sm-8.offset-sm-2
                            h3.text-light Congratulations! 
                            h5.text-light You were in the top 50 players!
                else if prizeLevel == "yellowsticker"
                    .row.align-items-center.mt-3
                        .col-sm-4.offset-sm-4
                            img#prizeImage(src="/img/prize2.png").my-4
                    .row.align-items-center.mt-3
                        .col-sm-8.offset-sm-2
                            h3.text-light Congratulations!  
                            h5.text-light You were in the top 150 players!
                else
                    .row.align-items-center.mt-3
                        .col-sm-4.offset-sm-4
                            img#prizeImage(src="/img/prize3.png").my-4
                    .row.align-items-center.mt-3
                        .col-sm-8.offset-sm-2
                            h3.text-light Congratulations!

                if prizeLevel != "none"
                    .row.align-items-center.mt-5
                        .col-sm-6.offset-sm-3
                            h3.text-light Collecting Your Prize
                        .col-sm-8.offset-sm-2
                            p.text-light.text-center Visit us in the main lobby on Sunday Morning between 9am and 11am.
                            p.text-light.text-center You can also find Adam Feinstein, Alex Levine, Albert Lin, Samantha Mendis, JD Reese, or Gavin Philips in person to claim your prize.

        .parallax-window(data-parallax="scroll", data-image-src="/img/space7.jpg", data-position="top", data-bleed="10")
        .slide_section#section-acknowledgements.container-light
            #titlebar-acknowledgements
                h1 Acknowledgements
            .container#section-acknowledgements
                .row.align-items-center.mt-3
                    .col-sm-10.offset-sm-1
                        p This game is the result of many hours of design, development, and testing.  Thank you to everyone involved!
                    
                .row.align-items-center.mt-2
                    .col-sm-8.offset-sm-2
                        h4 Game Design by 
                            b JD Reese
                
                .row.align-items-center.mt-3
                    .col-sm-8.offset-sm-2
                        h4 Puzzle Design by 
                        h5 
                            b Adam Feinstein
                        h5 
                            b Alex Levine
                        h5 
                            b Albert Lin
                        h5 
                            b Samantha Mendis
                        h5 
                            b JD Reese
                        h5 
                            b Gavin Philips
                
                .row.align-items-center.mt-3
                    .col-sm-8.offset-sm-2
                        h4 
                            b Special Thanks
                
                .row.align-items-center.mt-1
                    .col-sm-8.offset-sm-2
                        h6 Kristin Jones, Dan Lozano, Hope King, and everyone who helped test during the trial runs.
                    
                .row.align-items-center.mt-2
                    .col-sm-8.offset-sm-2.mb-3
                        h3
                            b Thank you for playing!
        
    .parallax-window(data-parallax="scroll", data-image-src="/img/space3.jpg", data-position="bottom", data-bleed="10").small